# Life Is Tempo - Environment Variables Template
# Copy this file to .env.local for local development
# NEVER commit actual secrets to git!

# =============================================================================
# Analytics
# =============================================================================
# Google Analytics Measurement ID (e.g., G-XXXXXXXXXX)
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# Vercel Analytics (auto-set by Vercel, no need to configure locally)
# NEXT_PUBLIC_VERCEL_ANALYTICS_ID=

# =============================================================================
# Newsletter Integration
# =============================================================================
# API key for newsletter service (Loops.so, Resend, etc.)
NEWSLETTER_API_KEY=

# Newsletter audience/list ID
NEWSLETTER_AUDIENCE_ID=

# =============================================================================
# Affiliate Programs (Future)
# =============================================================================
# Amazon Associates ID
# AMAZON_ASSOCIATE_ID=

# Secret key for affiliate link tracking and signing
# AFFILIATE_TRACKING_SECRET=

# =============================================================================
# AI Content Generation (Future)
# =============================================================================
# OpenAI API key for content generation
# OPENAI_API_KEY=

# Anthropic API key for voice note transformation
# ANTHROPIC_API_KEY=

# =============================================================================
# Security
# =============================================================================
# Rate limiting secret for API routes
RATE_LIMIT_SECRET=

# =============================================================================
# Development
# =============================================================================
# Set to 'development', 'production', or 'test'
NODE_ENV=development
